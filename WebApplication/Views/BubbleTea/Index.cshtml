@model IEnumerable<WebApplication.Models.BubleTea>

@{
    ViewBag.Title = "Trang chủ";
}

<h2>Trang chủ</h2>

<p>
    @Html.ActionLink("Thêm", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên thức uống
        </th>
        <th>
            Giá
        </th>
        <th>
            Topping
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @item.Price.ToString("N0")
        </td>
        <td>
            @item.Topping
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.id }) |
            @Html.ActionLink("Xem", "Details", new { id=item.id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
