@model WebApplication.Models.BubleTea

@{
    ViewBag.Title = "Chi tiết";
}

<h2>Chi tiết</h2>

<div>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            Tên thức uống
        </dt>

        <dd>
            @Model.Name
        </dd>

        <dt>
            Giá
        </dt>

        <dd>
            @Model.Price.ToString("N0")
        </dd>

        <dt>
            Topping
        </dt>

        <dd>
            @Model.Topping
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Tở về", "Index")
</p>
